@model List<ReFreshAir1.Models.Location>

@{
    ViewBag.Title = "FindLocations";
}

@{
    var locations = (List<ReFreshAir1.Models.Location>)ViewData["locations"]; // Cast the list
}
<link href="~/Content/Site.css" rel="stylesheet" />

<body>
    @using (Html.BeginForm("FindLocations", "Earth"))
    {
        <table id ="materials"class="table table-hover">
            <thead>
                <tr class="table-primary">

                    <th scope="col">Description</th>
                    <th scope="col">Curb Side Availability</th>
                    <th scope="col">Distance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var temp in locations)
                {
                <tr class="table-primary">

                    <td scope="row" class="black">
                        @* @temp.description *@ 

                        <a href="@Url.Action("LocationDetails", "Earth", new { location_id = temp.location_id })">@temp.description</a>
                    </td>
                    <td scope="row">@temp.curbside</td>
                    

                    <td scope="row">@temp.distance</td>

                    </tr>
                }
            </tbody>

        </table>
    }
</body>
