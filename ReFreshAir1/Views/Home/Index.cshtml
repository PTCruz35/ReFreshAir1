                            <div class="slider_text"style="color:white">
                                <h3 >RECYCLE</h3>
                                <h2>SAVE ENERGY</h2>
                                
                                @*  <a class="custom_btn" href="">Read  More</a>*@
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of Item-->
                <div class="item next left">
                    <div class="slider_overlay" >
                        <img alt="..." src="~/img/img3.jpg" style="width:100%; height:50%">
                        <div class="carousel-caption">
                            <div class="slider_text" style="color:darkorange">
                                <h3>RECYCLE</h3>
                                <h2>IMPROVE AIR QUALITY</h2>
                                
                                
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of item-->
            </div>
            <!--End of Carousel Inner-->
        </div>
    </section>
</div>
