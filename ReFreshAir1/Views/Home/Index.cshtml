@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <section id="slider">
        <div class="carousel slide carousel-fade" id="carousel-example-generic" data-interval="3000" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li class="active" data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item">
                    <div class="slider_overlay">
                        <img style="width:100%; height:50%" src="~/img/cloud.jpg" />
                        <div class="carousel-caption">
                            <div class="slider_text" style="color:blue">
                                <h3>RECYCLE</h3>
                <h2>PROTECT ENVIRONMENT</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of item With Active-->
                <div class="item active left">
                    <div class="slider_overlay">
                        <img alt="..." src="~/img/Earth_and_sky.jpg" style="width:100%; height:50%">
                        <div class="carousel-caption">
                            <div class="slider_text"style="color:white">
                                <h3 >RECYCLE</h3>
                                <h2>SAVE ENERGY</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of Item-->
                <div class="item next left">
                    <div class="slider_overlay" >
                        <img alt="..." src="~/img/img3.jpg" style="width:100%; height:50%">
                        <div class="carousel-caption">
                            <div class="slider_text" style="color:darkorange">
                                <h3>RECYCLE</h3>
                                <h2>IMPROVE AIR QUALITY</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End of item-->
            </div>
            <!--End of Carousel Inner-->
        </div>
    </section>
</div>
